{
    "version": 2,
    "name": "ng-ecommerce",
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "dist/ng-ecommerce/browser/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.+)",
            "dest": "/api/index.js"
        },
        {
            "src": "/",
            "dest": "/api/index.js"
        }
    ]
}